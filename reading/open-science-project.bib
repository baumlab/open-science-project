issn = {1540-7063, 1557-7023},
journal = {American Zoologist},
number = {6},
pages = {510--523},
title = {{Oil Impacts on Marine Invertebrate Populations and Communities}},
url = {http://icb.oxfordjournals.org/content/33/6/510{\%}5Cnhttp://icb.oxfordjournals.org/content/33/6/510.short},
